extends layout

block content

  form.row.center(action="/", method="GET")
    //- Choose Algorithm
    .col.s12.m6.l4.offset-l2
      h2.orange-text.text-darken-3 Sorting Algorithms
      .col.s6.l4.offset-l2
        p
          input(name="alg", type="radio", id="bubble" checked value="bubble")
          label(for="bubble", class="light-blue-text") Bubble
        p
          input(name="alg", type="radio", id="heap" value="heap")
          label(for="heap", class="light-blue-text") Heap
        p
          input(name="alg", type="radio", id="insertion" value="insertion")
          label(for="insertion", class="light-blue-text") Insertion
        p
          input(name="alg", type="radio", id="merge" value="merge")
          label(for="merge", class="light-blue-text") Merge
      .col.s6.l4
        p
          input(name="alg", type="radio", id="selection" value="selection")
          label(for="selection", class="light-blue-text") Selection
        p
          input(name="alg", type="radio", id="shell" value="shell")
          label(for="shell", class="light-blue-text") Shell
        p
          input(name="alg", type="radio", id="quick" value="quick")
          label(for="quick", class="light-blue-text") Quick


    //- Choose Language
    .col.s12.m6.l4
      h2.orange-text.text-darken-3 Languages
      .col.s6.l4.offset-l2
        p
          input(name="lang", type="radio", id="ruby" checked value="ruby")
          label(for="ruby", class="red-text") Ruby
      .col.s6.l4
        p
          input(name="lang", type="radio", id="javascript" value="javascript")
          label(for="javascript", class="orange-text") JavaScript
    

    //- Submit
    .row
      .col.s12
        br
        br
        button(type="submit", class="btn btn-large waves-effect waves-orange light-green") Build Your Algorithm


  .row
    .col.s12.m10.offset-m1.l8.offset-l2
      pre.z-depth-3
        code(class=language)= algorithm

  .row.stats.center
    h2.orange-text.text-darken-3 Complexities
    .col.s12.m6
      h4.orange-text Space
      .divider
      p.flow-text.red-text Worst: 
        span.black-text #{space.worst}
    .col.s12.m6
      h4.orange-text Time
      .divider
      p.flow-text.light-blue-text Best: 
        span.black-text #{time.best}
      p.flow-text.red-text Worst: 
        span.black-text #{time.worst}
